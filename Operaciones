let Frase = "Hola" + " Mundo" + "!"
Frase //El simbolo que utilizamos para sumar nos sirve tambien para poder agrupar elementos que sean de tipo "String"

let x = 1
x
let y = ++x //Nos permite hacer un pre-incremento 
y
x 

let z = x++ //nos permite hacer un post-incremento
z
x

let a = x-- //incremento
a
x
let b = --x
b
x

// Operadores Booleanos

!true //comando de negacion (lo contrario a true y false)
!false

!!true //doble negacion 

//Operadores de Igualdad

true === true //Se utiliza el simbolo de ===
true === false

true !== false // Nos permite saber si una operacion es distinta
false !== false

// Mayor o Igual que

5 > 3
5 < 3
3 >= 3
2 <= 1

"a" > "b" //Nos podemos utilizar tambien para ordenar caracteres 

// Operadores Logicos, nos sirven para que nos devuelvan valores sin que sean modificados

// Operador And && - Se encarga de devolver valores que sean true

true && true && true && true //Si se cambia a false se rompe la cadena de los valores
0 && true
1 && "Hello"

//Operador OR || //Devuelven los valores que sean false y asignar valores por defecto

false || false || false || false 


